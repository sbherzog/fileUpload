

@{
    ViewBag.Title = "newListing";
}

<h2>Add New Listing</h2>
<form method="post" enctype="multipart/form-data" action="/Home/addNewListin/">
    <input type="text" class="form-control" placeholder="Title" name="title" />
    <br />
    <input type="text" class="form-control" placeholder="Description" name="description" />
    <br />
    <input type="text" class="form-control" placeholder="Your Name" name="personName" />
    <br />
    <input type="text" class="form-control" placeholder="Phone Number" name="phoneNumber" />
    <br />
    <input type="file" class="form-control" placeholder="" name="file" />
    <br />
    <input type="date" class="form-control" name="dateListed" />
    <br />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>




